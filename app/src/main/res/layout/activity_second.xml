<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity" android:id="@+id/relativeLayout" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="@string/temperature"
            android:layout_width="215dp"
            android:layout_height="112dp"
            android:id="@+id/textView2" android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/aboutMe"
            app:layout_constraintBottom_toTopOf="@+id/gitHubButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/my_github_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gitHubButton"
            android:contentDescription="@string/github_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/about_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aboutMe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.134" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/myAvatar2"
            android:layout_marginBottom="342dp"/>
    <TextView
            android:text="@string/master_yoda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myName2" android:textSize="24sp"
            android:textStyle="bold" android:textAlignment="center"
            tools:text="@string/master_yoda"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintVertical_bias="0.396"
            app:layout_constraintStart_toEndOf="@+id/myAvatar2" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/myAvatar2"
            android:contentDescription="@string/avatar"
            tools:srcCompat="@drawable/master_yoda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.11" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toStartOf="@+id/myName2"
            android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/aboutMe"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="27dp"
            android:layout_marginEnd="31dp" app:srcCompat="@drawable/master_yoda"/>
</android.support.constraint.ConstraintLayout>